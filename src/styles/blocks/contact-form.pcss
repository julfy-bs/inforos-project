.mf-name {
  margin-bottom: 15px;
  color: #cfcfcf;


  & > input {
    width: 100%;
    height: 40px;
    background-color: #ffffff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;

    &:focus {
      outline-color: #009ef8;
    }

    &::placeholder {
      color: #cfcfcf;
    }
  }
}


.mf-email {
  margin-bottom: 15px;
  color: #cfcfcf;


  & > input {
    width: 100%;
    height: 40px;
    background-color: #ffffff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;

    &:focus {
      outline-color: #009ef8;
    }

    &::placeholder {
      color: #cfcfcf;
    }
  }
}

.mf-message {
  margin-bottom: 30px;
  color: #cfcfcf;


  & > textarea {
    width: 100%;
    min-height: 200px;
    background-color: #ffffff;
    border: none;
    padding: 10px 20px;
    resize: none;
    font-size: 16px;

    &:focus {
      outline-color: #009ef8;
    }

    &::placeholder {
      color: #cfcfcf;
    }
  }
}

.img--captcha {
  max-height: 40px;
  max-width: 100px;
  margin-right: 20px;
}

.g-recaptcha {
  display: flex;
  margin-bottom: 25px;
  color: #cfcfcf;

  & > input {
    width: 100%;
    height: 40px;
    background-color: #ffffff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;

    &:focus {
      outline-color: #009ef8;
    }

    &::placeholder {
      color: #cfcfcf;
    }
  }
}
