.slider__wrapper {
  overflow: hidden;
  position: relative;
  max-width: 750px;
}

.slider__item {
  display: flex;
  flex-flow: column-reverse nowrap;
}

.slider__right,
.slider__left {
  width: 16px;
  height: 40px;
  position: absolute;
  z-index: 10;
  top: 50%;
  cursor: pointer;
}

.slider__right {
  right: 0;
  transform: rotate(180deg) translate(100%, 10%);
}

.slider__left {
  transform: translate(100%, 10%);
}

