.sponsors {
  margin: 50px 0;
}

.sponsors__title {
  color: $news-title-color;
  font-family: "Roboto Condensed";
  font-size: 20px;
  font-weight: 400;
  margin-bottom: 30px;
  text-transform: uppercase;
  line-height: 1;
}

.sponsors__slider {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-evenly;
  align-items: center;

}

.sponsors-slider__wrapper {
  display: flex;
  flex-flow: row nowrap;
  width: 1100px;
  overflow: hidden;
}

.sponsors-slider__item {
  display: flex;
  flex-flow: column wrap;
  // width: 160px;
  height: 200px;
  border-right: 1px solid #dce5ec;
  margin-right: 10px;
  align-items: center;
  justify-content: flex-end;
  padding: 5px 10px 5px 5px;

  &:last-child {
    border: none;
  }
}

.sponsors-slider__image-wrapper {
  max-width: 160px;
  max-height: 70px;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50%;
}

.sponsors-slider__text {
  color: #6f6f6e;
  font-size: 13px;
  width: 160px;
  height: 40%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  text-align: center;
  text-decoration: none;
  cursor: pointer;

  &:hover {
    color: $hover-color;
  }
}

.sponsors-slider-arrow__icon {
  width: 10px;
  height: 25px;
  fill: none;
  stroke-miterlimit: 10;
  stroke-width: 2px;
  stroke: $sponsors-slider-buttons-calm-color;

  &:hover {
    stroke: $hover-color;
  }

  &--right {
    transform: rotate(180deg);
  }
}