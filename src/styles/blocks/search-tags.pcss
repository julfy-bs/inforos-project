.search-tags {
  display: flex;
  flex-flow: row wrap;
  color: $tags-color;
  font-size: 13px;
  margin-bottom: 5px;
}

.search-tags__item {

  &:hover {
    color: $hover-color;
  }

  &::after {
    content: '\00B7';
    padding: 0 5px;
  }

  &:last-child {
    &::after {
      content: none;
    }
  }
} 

.search-tags__link {
  text-decoration: none;
}