.search {
  display: flex;
  flex-flow: row nowrap;
}

.search__input {
  height: 40px;
  border: none;
  padding-left: 5px;
  background-color: $search-background-color;

  &:focus {
    outline: none;
    background-color: $search-background--hover-color;
  }

  @include phones {
    display: none;
  }
}

.search-icon {
  width: 40px;
  fill: $main-social-color;

  &:hover {
    fill: $hover-color;
  }
}