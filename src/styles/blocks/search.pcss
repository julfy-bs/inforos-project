.search {
  display: flex;
  flex-flow: row nowrap;
}

.search__input {
  height: 40px;
  border: none;
  padding-left: 5px;

  &:focus {
    outline-style: solid;
    outline-color: $main-social-color;
    outline-width: 2px;
  }

  
}

.search-icon {
  width: 40px;
  fill: $main-social-color;

  &:hover {
    fill: $hover-color;
  }
}