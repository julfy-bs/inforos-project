include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title 
  body
    .wrapper
      .container
        header.header
          .header__left
            +icon('header__logo', 'header-logo__img')
          .header__right
            - var icons = ["header__fb", "header__tw", "header__vk", "header__ok","header__tg", "header__yt"];
              ul.socials.header__socials
                each item in icons
                  li.socials__item
                    a(href="#").socials__link
                      +icon(item, "socials__icon")
              .search#search-link
                label.search__block
                  input(type="text" name="name" placeholder="" required).search__input
                - var icons = ["search-icon"]
                  each item in icons
                    +icon(item, "search-icon")
              .burger-menu#hamburger-menu-link
                - var icons = ["menu"]
                  each item in icons
                    +icon(item, "menu-icon")     
              //- nav.hamburger-menu#hamburger-menu
                .burger-header__menu
                  - var menu = [['Об издании', 'Рекламодателям', 'Контакты'], ['main', 'popular', 'short']];
                  ul.header__menu-list
                    each item, index in menu[0]
                      li.header__menu-item
                        a.header__menu-link(href="#" + menu[1][index] v-scroll-to="'#" + menu[1][index] + "'") #{item}
                - var menu = [['Экономика', 'Власть'], ['slider-form', 'slider-form']];
                ul.menu__list
                  each item, index in menu[0]
                    li.menu__item
                      a.menu__link(href="#" + menu[1][index] v-scroll-to="'#" + menu[1][index] + "'") #{item}
                - var icons = ["header__fb", "header__tw", "header__vk", "header__ok","header__tg", "header__yt"];
                  ul.socials.hamburger-menu__socials
                    each item in icons
                      li.socials__item
                        a.socials__link(href="#" target="_blank")
                          +icon(`${item}`, 'socials__icon')
                  a.close-button#close-nav-button(href="#")
                    +icon('remove', 'close-button__img', '20')

      nav.menu
        .container
          - var menu = [['Главная', 'Фонд', 'Гранты и субсидии', 'Правозащитные центры', 'Мероприятия', 'Пресс-центр', 'Контакты'], []];
            ul.menu__list
              each item, index in menu[0]
                if index == 0
                  li.menu__item.menu__item--active
                    a.menu__link(href="#"+ menu[1][index]) #{item}
                else
                  li.menu__item
                    a.menu__link(href="#"+ menu[1][index]) #{item}
      .container
        main.maincontent
          section.section.short
            .news__item
              .news__content
                p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nulla debitis deleniti rerum inventore dolorum explicabo!
              .news__image
                +image("content/180х140.jpg", "img img--small")

