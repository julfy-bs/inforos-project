extends ../layout/main

block variables
  - var title = 'Фонд поддержки и защиты прав соотечественников, проживающих за рубежом - Контакты'
  - var pageClass = 'centers-home'

block HeadScript
  <link href="src/vmap/jqvmap.css" media="screen" rel="stylesheet" type="text/css">
  <script type="text/javascript" src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
  <script type="text/javascript" src="src/vmap/jquery.vmap.js"></script>
  <script type="text/javascript" src="src/vmap/jquery.vmap.world.js" charset="utf-8"></script>

block content
  main.main-content
    .main__wrapper
      .container.main-container
        .row-wrapper
          include ../includes/modules/breadcrumbs
        .row-wrapper
          .column-wrapper.column-wrapper--main
            include ../includes/modules/centersHomeModule
          .column-wrapper.column-wrapper--side
            include ../includes/modules/navSidebar
            include ../includes/modules/news
            include ../includes/modules/photo
            include ../includes/modules/video
            include ../includes/modules/positionReverse
            include ../includes/modules/documentsSidebar
            include ../includes/modules/tagsSidebar
        .row-wrapper
          include ../includes/modules/activityNews
  include ../includes/modules/scrollToTop
block script
  script(
    src="https://api-maps.yandex.ru/2.1/?apikey=c1b1a47d-8c13-47fa-bc0a-9fb2c032c5a6&lang=ru_RU"
    type="text/javascript"
  )
